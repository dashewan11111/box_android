<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip" >

    <com.adult.android.view.CircleImageView
        android:id="@+id/item_community_reply_master_image"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_marginTop="2dip"
        android:background="@color/white"
        android:src="@drawable/user_default_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 楼层 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_community_reply_master_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是叶良辰"
                    android:textColor="@color/gray_3" />

                <TextView
                    android:id="@+id/item_community_reply_master_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@color/pink"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/gray_1" />

                <TextView
                    android:id="@+id/item_community_reply_master_flow_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="1F"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_community_reply_creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12小时前"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_community_reply_master_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:text="抢地主我最专业"
                android:textColor="@color/gray_3" />

            <!-- <include layout="@layout/line_gray_full" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/item_community_reply_flow_reply1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是叶良辰"
                    android:textColor="@color/gray_3" />

                <TextView
                    android:id="@+id/item_community_reply_flow_reply2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="我是叶良辰"
                    android:textColor="@color/gray_3" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_community_reply_flow_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:text="查看更多29条"
                android:textColor="@color/gray_2"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>