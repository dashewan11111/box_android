<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.Xy"
    android:layout_height="90dip"
    android:background="@drawable/item_coupon_type_1" >

    <View
        android:layout_width="wrap_content"
        android:layout_height="65dip"
        android:layout_gravity="center"
        android:background="@drawable/dotted_line_ver" />

    <LinearLayout
        style="@style/layout.Xy"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dip" >

        <LinearLayout
            style="@style/layout.Xy"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_coupon_renminbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_coupon_value"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="55sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout.Xy"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dip" >

            <TextView
                android:id="@+id/item_coupon_type"
                style="@style/layout.xy"
                android:gravity="center"
                android:text="满减券"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_coupon_desc"
                style="@style/layout.xy"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:text=". 满100元可用"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_coupon_time"
                style="@style/layout.Xy"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text=". 2015-10-30至2015-11-30"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>