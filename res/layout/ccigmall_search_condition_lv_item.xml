<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/search_lv_pw_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sort_pw_item_height"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_lv_pw_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/default_size" />

            <ImageView
                android:id="@+id/search_lv_pw_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/manfan"
                android:visibility="gone" />
        </LinearLayout>

        <View
            style="@style/gray_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>