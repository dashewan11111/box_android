<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.XY"
    android:background="@color/gray_bottom_bg"
    android:orientation="vertical" >

    <ScrollView
        style="@style/layout.XY"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/layout.XY"
            android:background="@color/gray_bottom_bg"
            android:orientation="vertical" >

            <include layout="@layout/layout_address_info" />

            <LinearLayout
                style="@style/layout.Xy"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dip" >

                <LinearLayout
                    style="@style/layout.Xy"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout.Xy"
                        android:layout_weight="1.0"
                        android:text="订单信息" />

                    <TextView
                        style="@style/layout.xy"
                        android:text="待发货"
                        android:textColor="@color/red" />
                </LinearLayout>

                <include layout="@layout/line_gray_full" />

                <LinearLayout
                    style="@style/layout.Xy"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout.xy"
                        android:text="下单时间："
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/layout.xy"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1.0"
                        android:text="2015-06-31 12:00:32"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/layout.Xy"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout.xy"
                        android:text="订单编号："
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/layout.xy"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1.0"
                        android:text="21020100215541654513"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/layout.Xy"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout.xy"
                        android:text="付款方式："
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/layout.xy"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1.0"
                        android:text="货到付款"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <include layout="@layout/line_gray_full" />

                <LinearLayout
                    style="@style/layout.Xy"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout.xy"
                        android:text="留       言："
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/layout.xy"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1.0"
                        android:text="无"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/layout.Xy"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip" >

                <TextView
                    style="@style/layout.xy"
                    android:layout_weight="1.0"
                    android:text="订单商品" />

                <TextView
                    android:id="@+id/order_details_prodcut_count"
                    style="@style/layout.xy"
                    android:text="共4件"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_details_prodcut_container"
                style="@style/layout.Xy"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dip" >
            </LinearLayout>

            <LinearLayout
                style="@style/layout.Xy"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    style="@style/layout.xy"
                    android:layout_weight="1.0"
                    android:text="订单金额" />

                <TextView
                    android:id="@+id/order_details_order_amount"
                    style="@style/layout.xy"
                    android:text="￥140.00"
                    android:textColor="@color/red"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout.Xy"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    style="@style/layout.xy"
                    android:text="总价："
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    style="@style/layout.xy"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout.Xy"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip" >

                <TextView
                    style="@style/layout.xy"
                    android:text="邮费："
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/order_details_trans_fee"
                    style="@style/layout.xy"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="货到付款"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout.Xy"
                android:layout_marginBottom="65dip"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="15dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip" >

                <TextView
                    style="@style/layout.xy"
                    android:text="优惠："
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/order_details_coupon_fee"
                    style="@style/layout.xy"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="货到付款"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="@style/layout.Xy"
        android:layout_gravity="bottom"
        android:background="#e0fafafa"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/order_details_btn_delete"
            android:layout_width="100dip"
            android:layout_height="35dip"
            android:layout_margin="10dip"
            android:background="@drawable/common_round_conner_bg_red"
            android:text="删除订单"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</FrameLayout>