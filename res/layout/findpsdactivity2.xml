<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.XY"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip" >

        <EditText
            android:id="@+id/findpsd_mobile"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:digits="@string/digits"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:imeOptions="actionNext"
            android:maxLength="11"
            android:padding="5dip"
            android:textColorHint="@color/gray_line1"
            android:textColorLink="@color/gray"
            android:textSize="@dimen/default_size" />

        <Button
            android:id="@+id/findpsd_btn_code"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:background="@drawable/common_round_conner_bg_gray_stroke"
            android:padding="10dip"
            android:text="获取验证码"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/line_gray_full" />

    <EditText
        android:id="@+id/findpsd_code"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:digits="@string/digits"
        android:gravity="center_vertical"
        android:hint="请输入手机短信中的验证码"
        android:imeOptions="actionNext"
        android:maxLength="6"
        android:padding="5dip"
        android:textColorHint="@color/gray_line1"
        android:textColorLink="@color/gray"
        android:textSize="@dimen/default_size" />

    <View
        style="@style/gray_line"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@color/gray_bg1" />

    <EditText
        android:id="@+id/findpsd_new_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入新密码"
        android:imeOptions="actionNext"
        android:maxLength="6"
        android:padding="5dip"
        android:textColorHint="@color/gray_line1"
        android:textColorLink="@color/gray"
        android:textSize="@dimen/default_size" />

    <View
        style="@style/gray_line"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@color/gray_bg1" />

    <Button
        android:id="@+id/findpsd_btn_commit"
        style="@style/white_bt"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_round_conner_bg_purple"
        android:text="重置"
        android:textColor="@color/gray" />

</LinearLayout>