<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.adult.android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:orientation="vertical" >

            <com.adult.android.view.RoundProgressBar
                android:id="@+id/roundProgressBar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android_custom:roundColor="@color/white"
                android_custom:roundProgressColor="@color/orange_commen"
                android_custom:roundWidth="2.5dip"
                android_custom:textColor="@color/orange_commen"
                android_custom:textIsDisplayable="true" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout.Xy"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <LinearLayout style="@style/produtc_comments_header_linearLayout" >

                <TextView
                    style="@style/produtc_comments_header_text1"
                    android:text="@string/comment_good" />

                <TextView
                    android:id="@+id/comment_haoping_text"
                    style="@style/produtc_comments_header_text2" />

                <ProgressBar
                    android:id="@+id/progressbar1"
                    style="@style/ProgressBar_Mini" />
            </LinearLayout>

            <LinearLayout style="@style/produtc_comments_header_linearLayout" >

                <TextView
                    style="@style/produtc_comments_header_text1"
                    android:text="@string/comment_ok" />

                <TextView
                    android:id="@+id/comment_zhongping_text"
                    style="@style/produtc_comments_header_text2" />

                <ProgressBar
                    android:id="@+id/progressbar2"
                    style="@style/ProgressBar_Mini" />
            </LinearLayout>

            <LinearLayout style="@style/produtc_comments_header_linearLayout" >

                <TextView
                    style="@style/produtc_comments_header_text1"
                    android:text="@string/comment_bad" />

                <TextView
                    android:id="@+id/comment_chaping_text"
                    style="@style/produtc_comments_header_text2" />

                <ProgressBar
                    android:id="@+id/progressbar3"
                    style="@style/ProgressBar_Mini" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/layout.Xy"
        android:layout_height="1dp"
        android:background="@color/gray_line1" />

    <LinearLayout
        style="@style/layout.Xy"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/comments_sort_1"
            style="@style/produtc_comments_header_relativeLayout" >

            <TextView
                android:id="@+id/comments_sort_text_1"
                style="@style/produtc_comments_header_relativeLayout_text" />

            <View style="@style/produtc_comments_header_relativeLayout_line" />
        </RelativeLayout>

        <View style="@style/produtc_comments_header_relativeLayout_line_o" />

        <RelativeLayout
            android:id="@+id/comments_sort_2"
            style="@style/produtc_comments_header_relativeLayout" >

            <TextView
                android:id="@+id/comments_sort_text_2"
                style="@style/produtc_comments_header_relativeLayout_text" />

            <View style="@style/produtc_comments_header_relativeLayout_line" />
        </RelativeLayout>

        <View style="@style/produtc_comments_header_relativeLayout_line_o" />

        <RelativeLayout
            android:id="@+id/comments_sort_3"
            style="@style/produtc_comments_header_relativeLayout" >

            <TextView
                android:id="@+id/comments_sort_text_3"
                style="@style/produtc_comments_header_relativeLayout_text" />

            <View style="@style/produtc_comments_header_relativeLayout_line" />
        </RelativeLayout>

        <View style="@style/produtc_comments_header_relativeLayout_line_o" />

        <RelativeLayout
            android:id="@+id/comments_sort_4"
            style="@style/produtc_comments_header_relativeLayout" >

            <TextView
                android:id="@+id/comments_sort_text_4"
                style="@style/produtc_comments_header_relativeLayout_text" />

            <View style="@style/produtc_comments_header_relativeLayout_line" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/layout.Xy"
        android:layout_height="1dp"
        android:background="@color/gray_line1" />

</LinearLayout>