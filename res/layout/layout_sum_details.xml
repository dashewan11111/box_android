<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.Xy"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        style="@style/layout.Xy"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="活动"
            android:textColor="@color/gray_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sum_details_promotion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货到付款"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/line_gray_full" />

    <LinearLayout
        style="@style/layout.Xy"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="商品总计"
            android:textColor="@color/gray_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sum_details_product_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/line_gray_full" />

    <LinearLayout
        style="@style/layout.Xy"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="运费"
            android:textColor="@color/gray_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sum_details_trans_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货到付款"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/line_gray_full" />

    <LinearLayout
        android:id="@+id/sum_details_llyt_coupon"
        style="@style/layout.Xy"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="优惠券"
            android:textColor="@color/gray_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sum_details_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/line_gray_full" />

    <EditText
        android:id="@+id/order_commit_message"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/common_round_conner_bg_gray"
        android:hint="给我们留言"
        android:padding="5dip"
        android:textSize="14sp" />

</LinearLayout>