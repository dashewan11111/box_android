<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.XY"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="5dip" >

    <FrameLayout
        android:id="@+id/homepage_guid_1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:padding="5dip" >

        <LinearLayout
            style="@style/layout.xy"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/homepage_guid_1_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_below="@+id/homepage_guid_1_text"
                android:layout_margin="3dip"
                android:adjustViewBounds="true"
                android:background="@drawable/homepage_part1_item1_selector" />

            <TextView
                android:id="@+id/homepage_guid_1_text"
                style="@style/main_tab_item_text"
                android:layout_marginTop="5dip"
                android:text="1元抢购"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/homepage_guid_2"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:padding="5dip" >

        <LinearLayout
            style="@style/layout.xy"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/homepage_guid_2_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_below="@+id/homepage_guid_2_text"
                android:layout_margin="3dip"
                android:background="@drawable/homepage_part1_item2_selector" />

            <TextView
                android:id="@+id/homepage_guid_2_text"
                style="@style/main_tab_item_text"
                android:layout_marginTop="5dip"
                android:text="0元夺宝"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/homepage_guid_3"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:padding="5dip" >

        <LinearLayout
            style="@style/layout.xy"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/homepage_guid_3_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_below="@+id/homepage_guid_3_text"
                android:layout_margin="3dip"
                android:background="@drawable/homepage_part1_item3_selector" />

            <TextView
                android:id="@+id/homepage_guid_3_text"
                style="@style/main_tab_item_text"
                android:layout_marginTop="5dip"
                android:text="限时抢购"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/homepage_guid_4"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:padding="5dip" >

        <LinearLayout
            style="@style/layout.xy"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/homepage_guid_4_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_below="@+id/homepage_guid_4_text"
                android:layout_margin="3dip"
                android:background="@drawable/homepage_part1_item4_selector" />

            <TextView
                android:id="@+id/homepage_guid_4_text"
                style="@style/main_tab_item_text"
                android:layout_marginTop="5dip"
                android:text="性爱技巧"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>