<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/coupon_noUseBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:text="未使用"
            android:textColor="@color/purple"
            android:textSize="17sp" />

        <Button
            android:id="@+id/coupon_overTimeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:text="已过期"
            android:textSize="17sp" />

        <Button
            android:id="@+id/coupon_usedBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:text="已使用"
            android:textSize="17sp" />

      <!--   <Button
            android:id="@+id/coupon_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:text="金券"
            android:textSize="17sp" />

        <Button
            android:id="@+id/coupon_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:text="优惠券"
            android:textSize="17sp" /> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coupon_Line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:id="@+id/coupon_noUseLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/purple" />

        <View
            android:id="@+id/coupon_overTimeLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/gray" />

        <View
            android:id="@+id/coupon_usedLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/gray" />

       <!--  <View
            android:id="@+id/coupon_moneyLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/gray" />

        <View
            android:id="@+id/coupon_normalLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/gray" /> -->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#50eeeeee" >

        <LinearLayout
            android:id="@+id/zero_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:src="@drawable/img_default_248" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="您没有优惠券~~" />
        </LinearLayout>

        <ListView
            android:id="@+id/coupon_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom"
            android:divider="@android:color/transparent"
            android:dividerHeight="15dp"
            android:listSelector="@android:color/transparent"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/bottom"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#50cccccc"
            android:orientation="horizontal"
            android:padding="5dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:text="共"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/coupon_countTet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/coupon_countTet_des"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="张未使用的优惠券"
                    android:textSize="17sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_coupon_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/common_round_conner_bg_purple_stroke"
                android:padding="7dip"
                android:text="使用说明"
                android:textColor="@color/purple"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>