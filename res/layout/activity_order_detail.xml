<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_order_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_top_title"
        layout="@layout/layout_top_title_left_back_only" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="已发货 "
                android:textColor="@color/common_purple"
                android:textSize="@dimen/order_detail_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:background="#22000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" >

                    <LinearLayout
                        android:id="@+id/ll_order_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp" >

                            <TextView
                                android:id="@+id/tv_order_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单编号 : "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_order_amount_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tv_order_amount"
                                android:text="888888"
                                android:textColor="#f00"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp" >

                            <TextView
                                android:id="@+id/tv_deal_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单时间 : "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_deal_time_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tv_deal_time"
                                android:text="2015-01-06 20:34:08"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!-- 地址 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#22000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#22000000" />

            <TextView
                android:id="@+id/orderDetail_adressTet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="北京市  朝阳区 霞光里 15号   宵云中心 12 A座 12层"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_deal_time"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_deal_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_deal_time"
                    android:text="鑫世界"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_deal_time"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="身份证:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_deal_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_deal_time"
                    android:text="20150106902078345608"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!-- end收货人 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#22000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#22000000" />
            <!-- goods info -->

            <TextView
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="商品信息 " />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#22000000" />

            <RelativeLayout
                android:id="@+id/detail_area"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:padding="10dp" >

                <Gallery
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/deatail_leftArea"
                    android:minWidth="150dp" />

                <LinearLayout
                    android:id="@+id/deatail_leftArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/deatailOrderCuntTet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="共3件商品" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/detail_right_bcg" />
                </LinearLayout>
            </RelativeLayout>
            <!-- end goods info -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#22000000" />

            <RelativeLayout
                android:id="@+id/detail_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:textSize="@dimen/order_detail_size" />

                <TextView
                    android:id="@+id/orderDetalPayTet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="在线支付"
                    android:textSize="@dimen/order_detail_size" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#22000000" />
            <!-- 发票信息 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="发票信息"
                android:textSize="@dimen/order_detail_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票抬头：" />

                <TextView
                    android:id="@+id/orderDetail_fapiaoKindTet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票内容：" />

                <TextView
                    android:id="@+id/orderDetail_fapiaoMXTet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="明细" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#22000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品总额：" />

                <TextView
                    android:id="@+id/orderDetail_spzrTet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运        费：" />

                <TextView
                    android:id="@+id/orderDetail_yunfeiTet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#22000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#22000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额："
                    android:textSize="@dimen/order_detail_size" />

                <TextView
                    android:id="@+id/orderDetal_dingdanJETet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/order_detail_size" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#22000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/orderDetail_chakanWLBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_round_conner_bg_little_purple"
                    android:padding="10dp"
                    android:text="查看物流"
                    android:textColor="@color/white"
                    android:textSize="@dimen/order_detail_size" />

                <Button
                    android:id="@+id/orderDetail_querenSHBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_round_conner_bg_little_purple"
                    android:padding="10dp"
                    android:text="确认收货"
                    android:textColor="@color/white"
                    android:textSize="@dimen/order_detail_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>