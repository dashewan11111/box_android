<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_header_top_title_style" >

    <ImageView
        android:id="@+id/common_top_title_btn_back"
        style="@style/common_header_btn_back"/>

    <LinearLayout
        android:id="@+id/common_top_title_text"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/common_top_filter"
        android:layout_toRightOf="@+id/common_top_title_btn_back"
        android:background="@drawable/common_round_conner_bg"
        android:gravity="center"
        android:orientation="horizontal" >
        <com.adult.android.view.ClearEditText
            android:id="@+id/edit_good"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/search_background"
            android:drawableLeft="@drawable/common_search_icon"
            android:layout_weight="1.0"
            android:hint="@string/search_hint"
            android:maxLength="50"
            android:drawablePadding="5dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="16sp"
            android:imeOptions="actionSearch" 
            android:paddingLeft="10dip"
            android:paddingRight="8dip"/>
    </LinearLayout>

    <Button
        android:id="@+id/common_top_filter"
        style="@style/common_header_btn_search" />

</RelativeLayout>