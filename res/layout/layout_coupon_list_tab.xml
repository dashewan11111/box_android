<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/layout.Xy"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/coupon_list_tab_useable"
            style="@style/community_fragment_tab_text"
            android:text="可用优惠券" />

        <TextView
            android:id="@+id/coupon_list_tab_out_time"
            style="@style/community_fragment_tab_text"
            android:text="过期优惠券" />
    </LinearLayout>

    <include layout="@layout/line_gray_full" />

    <LinearLayout
        style="@style/layout.Xy"
        android:layout_marginTop="-1.5dip"
        android:background="@color/transparent"
        android:orientation="horizontal" >

        <View
            android:id="@+id/coupon_list_tab_view_useable"
            style="@style/community_fragment_tab_devide_view" />

        <View
            android:id="@+id/coupon_list_tab_view_out_time"
            style="@style/community_fragment_tab_devide_view" />
    </LinearLayout>

</LinearLayout>