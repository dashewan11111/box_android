<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/common_bottom_bottomBarHomeBtn"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:drawablePadding="1.0dip"
        android:drawableTop="@drawable/bottom_home_selector"
        android:gravity="center"
        android:paddingTop="4dip"
        android:text="@string/bottom_home_title"
        android:textColor="@color/bottom_label_selector"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/common_bottom_bottomBarProductBtn"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:drawablePadding="1.0dip"
        android:drawableTop="@drawable/bottom_category_selector"
        android:gravity="center"
        android:paddingTop="4dip"
        android:text="@string/bottom_category_title"
        android:textColor="@color/bottom_label_selector"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/common_bottom_bottomBarShopBtn"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:drawablePadding="1.0dip"
        android:drawableTop="@drawable/bottom_cars_selector"
        android:gravity="center"
        android:paddingTop="4dip"
        android:text="@string/string_cars"
        android:textColor="@color/bottom_label_selector"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/common_bottom_bottomBarMyBtn"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:drawablePadding="1.0dip"
        android:drawableTop="@drawable/bottom_my_selector"
        android:gravity="center"
        android:paddingTop="4dip"
        android:text="@string/string_my_ccigmall"
        android:textColor="@color/bottom_label_selector"
        android:textSize="12.0sp" />

</LinearLayout>