<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:orientation="vertical"
    android:background="#55eeeeee"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
             android:layout_weight="1"
             android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imgview_user_icon"
                android:layout_width="30dip"
                android:layout_height="30dip"
                
                android:background="@drawable/list_item_selector"
                android:padding="4dip" />

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:ellipsize="end"
                android:text="heheheheh"
                android:maxLines="1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgview_user_grade"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="18dip"
                android:background="@drawable/list_item_selector"
                android:padding="4dip" 
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:max="5"
            android:numStars="5"
            android:rating="5" />

    </LinearLayout>
    <ImageView android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="@color/gray"/>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
                android:id="@+id/txt_comment_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="heheheheh"
                android:textColor="@color/gray"
                android:maxLines="1"
                android:textSize="16sp" />
        <TextView
                android:id="@+id/txt_comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/gray"
                android:text="2015-01-13  10:10:10"
                android:maxLines="1"
                android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>