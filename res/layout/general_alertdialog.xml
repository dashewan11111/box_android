<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/general_roundrect_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_alertdialog_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="提示头"
        android:textColor="@color/bg_title_bar"
        android:textSize="25sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_alertdialog_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="提示语"
        android:textColor="@color/bg_title_bar"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/my_divide_line_1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:src="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00000000" >

        <ImageView
            android:id="@+id/my_divide_line_2"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:src="@color/black" />

        <Button
            android:id="@+id/btn_cancel_alertdialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/my_divide_line_2"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="取消"
            android:textColor="@color/bg_title_bar" />

        <Button
            android:id="@+id/btn_confirm_alertdialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_divide_line_2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="确定"
            android:textColor="@color/bg_title_bar" />
    </RelativeLayout>

</LinearLayout>