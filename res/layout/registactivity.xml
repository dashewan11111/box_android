<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.XY"
    android:background="@color/gray_bottom_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dip" >

        <EditText
            android:id="@+id/regist_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="@string/digits"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:imeOptions="actionNext"
            android:padding="5dip"
            android:textColorHint="@color/gray_line1"
            android:textColorLink="@color/gray"
            android:textSize="@dimen/default_size" />

        <View
            style="@style/gray_line"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/gray_bg1" />

        <Button
            android:id="@+id/regist_btn_get_code"
            style="@style/white_bt"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_round_conner_bg_purple"
            android:text="注册" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="5dip"
                android:text="已有成人秀账号"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/regist_login"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:padding="5dip"
                android:text="登录"
                android:textColor="@color/common_purple" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>