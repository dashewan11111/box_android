<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_marginTop="70dip"
        android:src="@drawable/login_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="YYK SmartShop Terminal"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/login_acount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/login_user_name"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/default_size"
                android:visibility="gone" />

            <EditText
                android:id="@+id/login_usernameEdt"
                android:layout_width="0dip"
                android:layout_height="45dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1.0"
                android:background="@drawable/common_round_conner_bg_gray_stroke"
                android:gravity="center_vertical"
                android:hint="input your e-mail here"
                android:imeOptions="actionNext"
                android:paddingLeft="10dip"
                android:text="shopper1"
                android:textColorHint="@color/gray_line1"
                android:textSize="@dimen/default_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/login_password" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/login_password"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/default_size"
                android:visibility="gone" />

            <EditText
                android:id="@+id/login_psdEdt"
                android:layout_width="0dip"
                android:layout_height="45dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1.0"
                android:background="@drawable/common_round_conner_bg_gray_stroke"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:paddingLeft="15dip"
                android:password="true"
                android:text="password123"
                android:textColorHint="@color/gray_line1"
                android:textSize="@dimen/default_size" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_loginBtn"
        style="@style/white_bt"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_round_conner_bg_main"
        android:text="Login"
        android:textColor="@color/white" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:visibility="invisible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="15dip"
        android:text="更轻送，更自由。畅想欢乐无负担"
        android:textColor="@color/gray"
        android:textSize="16sp" />

</LinearLayout>