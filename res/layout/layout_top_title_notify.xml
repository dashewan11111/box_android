<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_header_top_title_style" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            style="@style/common_header_btn_back"
            android:src="@drawable/homepage_message_selector" />

        <TextView
            android:id="@+id/txt_message_count"
            style="@style/sample_number_text"
            android:layout_gravity="right"
            android:layout_marginRight="2dip"
            android:layout_marginTop="2dip"
            android:text="12"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_top_title_text"
        style="@style/common_header_top_title_center_text_style"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_weight="1.0"
        android:background="@drawable/search_background" />

    <ImageView
        style="@style/common_header_btn_back"
        android:src="@drawable/homepage_message_selector" />

</LinearLayout>