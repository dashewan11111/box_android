<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:background="@color/white">
    <RelativeLayout
          android:layout_width="124dip"
        android:layout_height="124dp"
        android:orientation="horizontal"
        android:id="@+id/left_image"
        android:layout_centerVertical="true">
 	<ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="124dip"
        android:layout_height="124dip"
        android:scaleType="fitCenter"
        android:src="@drawable/img_default_114"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"/>
 
    <ImageView 
        android:id="@+id/promotion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_list_deseno"
        android:layout_marginLeft="12dp"
        android:visibility="gone"/>

 	</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/left_image"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:orientation="vertical" 
        android:layout_marginLeft="12dp">
        
          <RelativeLayout 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content" >
             <ImageView 
                 	android:id="@+id/flag_result"
                  	android:layout_width="40dip"
        			android:layout_height="30dip"
        			android:layout_alignParentLeft="true"
        			android:src="@drawable/img_default_114" 
        			android:layout_centerInParent="true"/>
          <LinearLayout 
              android:layout_toRightOf="@id/flag_result"
               	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="vertical"
        		android:layout_centerInParent="true"
        		android:layout_marginLeft="4dip">
             <TextView
                 	android:id="@+id/country_result"
                  	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:textSize="12sp"
        			android:textColor="@color/grey_font_color"/>
             <TextView 
                 	android:id="@+id/detail_result"
                  	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:textSize="12sp"
        			android:textColor="@color/bg_title_bar"/>
         </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="15sp" 
            android:textColor="@color/font_color"
            android:layout_marginTop="8dp"/>

        
        <LinearLayout 
              android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dip">
        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" 
            android:text="269"
            android:textColor="@color/red"/>
         <TextView
             android:layout_marginLeft="10dip"
            android:id="@+id/tv_goods_foreign_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" 
            android:textColor="@color/mid_grey_font_color"/>
        
        </LinearLayout>

         <LinearLayout 
                 	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:orientation="horizontal"
        			android:layout_marginTop="8dip"
        			android:layout_marginBottom="8dp">
             <TextView 
                 	android:id="@+id/home_price_result"
                  	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="国内参考价格"
        			android:textSize="15sp"
        			android:textColor="@color/mid_grey_font_color"/>
             <TextView 
                 	android:id="@+id/goods_home_price"
                  	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_marginLeft="5dip"        
        			android:textSize="15sp"
        			android:textColor="@color/mid_grey_font_color"/>
             </LinearLayout>
      
    </LinearLayout>

</RelativeLayout>