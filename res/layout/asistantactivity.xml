<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.XY"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/para_shop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dip" >

        <com.adult.android.view.CircleImageView
            android:id="@+id/asistant_shopper_image"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/default_user_avator_m" >
        </com.adult.android.view.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/asistant_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/asistant_shopper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:textColor="@color/gray_2"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/asistant_asistant_code"
        android:layout_width="280dip"
        android:layout_height="280dip"
        android:layout_marginTop="30dip"
        android:adjustViewBounds="true"
        android:src="@drawable/img_default_248" />

</LinearLayout>