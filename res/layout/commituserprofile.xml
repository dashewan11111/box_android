<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.XY"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.adult.android.view.CircleImageView
        android:id="@+id/commit_user_profile_avator"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginTop="30dip"
        android:src="@drawable/default_user_avator_m" >
    </com.adult.android.view.CircleImageView>

    <LinearLayout
        android:id="@+id/commit_user_profile_llyt_change"
        style="@style/layout.xy"
        android:layout_marginTop="20dip"
        android:background="@drawable/common_round_conner_bg_gray_stroke"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/exchange_sexy" />

        <TextView
            style="@style/layout.xy"
            android:layout_marginLeft="5dip"
            android:text="换一下"
            android:textColor="@color/gray" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout.Xy"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <EditText
            android:id="@+id/commit_user_profile_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入最多8个汉子的昵称"
            android:imeOptions="actionNext"
            android:padding="5dip"
            android:textColorHint="@color/gray_line1"
            android:textColorLink="@color/gray"
            android:textSize="@dimen/default_size" />

        <View
            style="@style/gray_line"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/gray_bg1" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout.Xy"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <EditText
            android:id="@+id/commit_user_profile_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入6-8位密码"
            android:imeOptions="actionNext"
            android:padding="5dip"
            android:textColorHint="@color/gray_line1"
            android:textColorLink="@color/gray"
            android:textSize="@dimen/default_size" />

        <View
            style="@style/gray_line"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/gray_bg1" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout.Xy"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:text="选择性别"
            android:textSize="@dimen/default_size" />

        <LinearLayout
            android:id="@+id/commit_user_profile_male"
            style="@style/layout.xy"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/commit_user_profile_male_img"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:src="@drawable/sexy_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="男" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commit_user_profile_female"
            style="@style/layout.xy"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/commit_user_profile_female_img"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:src="@drawable/sexy_unselected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="女" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/gray_line"
        android:background="@color/gray_bg1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dip"
        android:text="选择性别后不可更改喔" />

    <Button
        android:id="@+id/commit_user_profile_btn_commit"
        style="@style/white_bt"
        android:layout_margin="10dp"
        android:background="@drawable/common_round_conner_bg_purple"
        android:text="完成" />

</LinearLayout>