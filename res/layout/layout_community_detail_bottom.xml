<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/community_detail_reply_image"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:padding="5dip"
        android:src="@drawable/user_default_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/community_detail_reply_look"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_marginLeft="10dip"
        android:padding="5dip"
        android:src="@drawable/user_default_icon"
        android:visibility="gone" />

    <EditText
        android:id="@+id/community_detail_reply_input"
        android:layout_width="0dip"
        android:layout_height="45dip"
        android:layout_weight="1.0"
        android:padding="5dip" />

    <TextView
        android:id="@+id/community_detail_reply_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:text="发送"
        android:textSize="16sp" />

</LinearLayout>