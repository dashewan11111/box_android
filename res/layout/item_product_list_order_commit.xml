<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.Xy"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/item_product_order_commit_image"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:src="@drawable/img_default_672_632" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_product_order_commit_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="美国的撒娇雕塑家大搜美国的撒娇雕塑家大搜美"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_product_order_commit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="￥158.00"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_product_order_commit_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="颜色：薰衣草紫"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_product_order_commit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:text="数量：1"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>