<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/layout.Xy"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="5dip"
        android:padding="10dip" >

        <TextView
            android:id="@+id/coupon_list_tab_useable"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="综合评分:4.9"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/item_comment_point"
            style="@style/rating_bar"
            android:max="5"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1" />
    </LinearLayout>

    <include layout="@layout/line_gray_full" />

    <LinearLayout
        style="@style/layout.Xy"
        android:layout_marginTop="-1.5dip"
        android:layout_marginBottom="5dip"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/gray"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="全部"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="2.0"
            android:background="@drawable/common_round_conner_bg_gray_stroke"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="满意（10）"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="2.0"
            android:background="@drawable/common_round_conner_bg_gray_stroke"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="一般（10）"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="2.0"
            android:background="@drawable/common_round_conner_bg_gray_stroke"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="不满意（0）"
            android:textColor="@color/gray"
            android:textSize="10sp" />
    </LinearLayout>

    <include 
        layout="@layout/line_gray_full"
        />
</LinearLayout>