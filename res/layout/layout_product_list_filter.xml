<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.Xy"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/product_sort_by_salesamount"
        style="@style/product_list_filter"
        android:text="销量" />

    <TextView
        android:id="@+id/product_sort_by_renqi"
        style="@style/product_list_filter"
        android:text="人气" />

    <LinearLayout
        android:id="@+id/product_sort_by_price"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/product_sort_by_price_up"
                android:layout_width="5dip"
                android:layout_height="4dip"
                android:background="@drawable/price_up" />

            <ImageView
                android:id="@+id/product_sort_by_price_down"
                android:layout_width="5dip"
                android:layout_height="4dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/price_down" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/product_txt_filter"
        style="@style/product_list_filter"
        android:text="筛选" />

</LinearLayout>