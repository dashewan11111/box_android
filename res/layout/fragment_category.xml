<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.XY"
    android:background="@color/gray_bg1"
    android:orientation="horizontal" >

    <ListView
        android:id="@+id/category_list"
        android:layout_width="100dip"
        android:layout_height="match_parent"
        android:layout_weight="0.0"
        android:background="@color/white"
        android:divider="@color/gray_bg1"
        android:dividerHeight="0.75dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:focusable="true"
        android:scrollbars="none" >
    </ListView>

    <FrameLayout
        android:id="@+id/category_fragment_content"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginBottom="0.75dip"
        android:layout_marginTop="0.75dip"
        android:layout_weight="1.0"
        android:background="@color/white" >
    </FrameLayout>

</LinearLayout>