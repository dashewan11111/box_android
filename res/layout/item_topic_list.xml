<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_topic_list_user_avator"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/user_default_icon" />

        <TextView
            android:id="@+id/item_topic_list_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:padding="5dip"
            android:text="美好妆容修炼记"
            android:textColor="@color/lightpurple"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:paddingTop="8dip" >

        <TextView
            android:id="@+id/item_topic_list_topic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小眼睛怎么拯救？眼线让你瞬间开眼"
            android:textColor="@color/gray_3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_topic_list_topic_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:ellipsize="end"
            android:lineSpacingExtra="5dip"
            android:maxLines="2"
            android:text="小眼睛怎么拯救？眼线让你瞬间开眼小眼睛怎么拯救？眼线让你瞬间开眼小眼睛怎么拯救？眼线让你瞬间开眼小眼睛怎么拯救？眼线让你瞬间开眼"
            android:textColor="@color/gray_1"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_topic_list_topic_image_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="8dip"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="-5dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_topic_list_topic_image_1"
                style="@style/item_topic_list_img" />

            <ImageView
                android:id="@+id/item_topic_list_topic_image_2"
                style="@style/item_topic_list_img" />

            <ImageView
                android:id="@+id/item_topic_list_topic_image_3"
                style="@style/item_topic_list_img" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_topic_list_img_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#90000000"
            android:padding="5dip"
            android:text="共6张"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/item_topic_list_txt_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈家大小姐"
            android:textColor="@color/lightpurple" />

        <TextView
            android:id="@+id/item_topic_list_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="5分钟前"
            android:textColor="@color/gray_1" />

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1.0" />

        <ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:src="@drawable/user_default_icon" />

        <TextView
            android:id="@+id/item_topic_list_txt_visitor_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="3.2万"
            android:textColor="@color/gray_1" />

        <ImageView
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/user_default_icon" />

        <TextView
            android:id="@+id/item_topic_list_txt_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="1123"
            android:textColor="@color/gray_1" />
    </LinearLayout>

</LinearLayout>