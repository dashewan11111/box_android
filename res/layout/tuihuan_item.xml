<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/tuihuan_iconImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/imageview_border"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tuihuan_infoTet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tuihuan_iconImg"
                android:maxLines="2"
                android:padding="5dp"
                android:text="恒祥源  袜子男士  冰滑锦纶双丝男袜 4双优惠装  夏季新款..."
                android:textColor="#000000"
                android:textSize="@dimen/default_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tuihuan_iconImg"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/tv_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量 : "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_order_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_order_amount"
                    android:text="1"
                    android:textSize="@dimen/default_size" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_order_action"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/common_round_conner_bg_purple"
                android:focusable="false"
                android:text="申请售后"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>