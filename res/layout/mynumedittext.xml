<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_num_product_reduce"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/number_edit_left_selector" />

    <EditText
        android:id="@+id/edt_num"
        style="@style/layout.xY"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:background="@drawable/btn_number_content_disable"
        android:editable="true"
        android:gravity="center"
        android:inputType="number"
        android:maxWidth="50dp"
        android:singleLine="true"
        android:textColor="@color/gray_3"
        android:textSize="@dimen/default_size" />

    <ImageView
        android:id="@+id/btn_num_product_plus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/number_edit_right_selector" />

</LinearLayout>