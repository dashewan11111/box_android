<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/product_details_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:src="@drawable/my_customer_service" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="center"
                android:text="客服"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_details_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:src="@drawable/my_favourite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/product_details_addcart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:background="@drawable/common_round_conner_bg_red_stroke"
        android:gravity="center"
        android:text="@string/add_to_shop_cart"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/product_details_buy_now"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_weight="1"
        android:background="@color/main_red"
        android:gravity="center"
        android:text="@string/buy_right_now"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>