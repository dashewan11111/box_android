<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="menu_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#40333333</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <!-- 顶部标题栏的总体样式 （大小和背景） -->
    <style name="common_header_top_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@color/lightpurple</item>
    </style>

    <!-- 顶部标题栏中间的Activity标题 -->
    <style name="common_header_top_title_center_text_style" parent="@style/layout.XY">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowDx">3</item>
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- 顶部标题栏的返回按钮 -->
    <style name="common_header_btn_back">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
        <item name="android:onClick">btnTopTitleBack</item>
        <item name="android:padding">@dimen/common_top_title_padding</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@drawable/back</item>
    </style>

    <!-- 顶部标题栏的设置按钮 -->
    <style name="common_header_btn_setting">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/common_top_title_padding</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:src">@drawable/common_top_setting</item>
    </style>

    <!-- 顶部标题栏的搜索按钮 -->
    <style name="common_header_btn_search">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/common_top_title_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.PageIndicatorDefaults" parent="android:Theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_exit</item>
    </style>

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 详情页-规格页样式 -->

    <style name="Translucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- cart adapter -->
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--  -->
    <style name="goods_sort_name_style">
        <item name="android:textColor">@color/purple_white_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:duplicateParentState">true</item>
    </style>
    <!-- <item name="android:layout_centerInParent">true</item> -->

    <style name="goods_sort_bg_style">
        <item name="android:background">@drawable/goods_sort_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="line2">
        <item name="android:background">#ffcccccc</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="line_v">
        <item name="android:background">#ffcccccc</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20.0dp</item>
    </style>
    <!-- Pop Dialog 的基本设置 -->
    <style name="common_pop_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="gray_line">
        <item name="android:background">@color/gray_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="white_line">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!-- 顶部标题栏的文字按钮 -->
    <style name="common_header_btn_text" parent="layout.xy">
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:textSize">@dimen/default_size_moderate</item>
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="white_bt">
        <item name="android:background">@drawable/common_round_conner_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_size</item>
    </style>

    <style name="main_tab_item_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="main_tab_item_icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="main_tab_item_text" parent="layout.xy">
        <item name="android:textColor">@color/bottom_label_selector</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">@dimen/default_size_small_3</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <!-- 顶部标题栏的总体样式 （大小和背景） -->
    <style name="common_header_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/default_top_bar_height</item>
        <item name="android:background">@color/main_top_bg_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 顶部标题栏中间的Activity标题 -->
    <style name="common_header_center_text_style" parent="layout.xy">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:textColor">@color/main_black_text</item>
    </style>

    <!-- 顶部标题栏两侧的按钮 -->
    <style name="common_header_image_button">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/common_header_padding</item>
        <item name="android:src">@drawable/back</item>
    </style>

    <!-- 顶部标题栏两侧的文字按钮 -->
    <style name="common_header_text_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/default_size_small</item>
        <item name="android:padding">@dimen/common_header_padding</item>
    </style>

    <!-- 顶部标题栏中间区域 -->
    <style name="common_header_middle_layout">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/common_header_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1.0</item>
    </style>

</resources>