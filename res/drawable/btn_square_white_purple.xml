<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 自定义默认边框 -->


    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#7B2192" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>