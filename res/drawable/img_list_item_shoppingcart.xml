<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#ccc" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:top="1px"
        android:bottom="1px"
        android:right="1px"
        android:left="1px">
        <shape>
            <solid android:color="#ffffff" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

</layer-list>